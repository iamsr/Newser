<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/sourceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABP NEWS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/sourceDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sourceTitle"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="5dp"
            android:text="Your trusted source for breaking news, analysis, exclusive interviews, headlines, and videos at ABCNews.com."/>

    </RelativeLayout>

    </android.support.v7.widget.CardView>



